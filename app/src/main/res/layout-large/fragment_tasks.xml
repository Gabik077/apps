<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    app:ignore="NamespaceTypo">

<android.support.v7.widget.CardView
        android:id="@+id/card_view_task"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"  >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:text="Crear Tarea"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="24dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />


        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/edit_nametask"
            android:layout_width="280dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:id="@+id/linear_zone"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona:"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>
       <Spinner
           android:layout_width="150dp"
           android:layout_marginLeft="185dp"
           android:id="@+id/sp_zone"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:id="@+id/linear_port2"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_marginLeft="195dp"
            android:id="@+id/sp_type"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:id="@+id/linear_time"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:layout_width="100dp"
            android:layout_marginLeft="195dp"
            android:id="@+id/edit_hour"
            android:inputType="time"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"></EditText>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btn_save_task"
        android:layout_below="@+id/card_view_task"
        android:background="@color/colorPrimary"
        android:layout_marginTop="30dp"
        android:text="Guardar"
        android:textColor="@color/colorWhite"
        android:layout_height="50dp"></Button>
</RelativeLayout>