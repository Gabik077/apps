<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    app:ignore="NamespaceTypo">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row1"
    android:orientation="horizontal">

    <include layout="@layout/card_view_temp"
        android:id="@+id/card_view"></include>

    <include layout="@layout/card_view_2"
        android:id="@+id/card_view"></include>

    <include layout="@layout/card_view_3"
        android:id="@+id/card_view"></include>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2"
        android:layout_below="@+id/row1"
        android:orientation="horizontal">

        <include layout="@layout/card_view_4"
            android:id="@+id/card_view"></include>

        <include layout="@layout/card_view_5"
            android:id="@+id/card_view"></include>

        <include layout="@layout/card_view_6"
            android:id="@+id/card_view"></include>
    </LinearLayout>

</RelativeLayout>
